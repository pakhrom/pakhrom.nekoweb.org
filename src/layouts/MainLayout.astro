---
import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="my-4 mx-auto max-w-prose">
    <main class="mx-2">
      <slot />
    </main>
  </body>
</html>
