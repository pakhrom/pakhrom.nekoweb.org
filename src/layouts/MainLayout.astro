---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
  pageTitle: string;
  pageLang?: string;
}
const { pageTitle, pageLang = "en-US" } = Astro.props;
---

<!doctype html>
<html lang={pageLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{pageTitle}</title>
  </head>
  <body class="mx-auto max-w-[80ch] bg-[#f3f3fd] font-[JetBrains_Mono]">
    <div class="m-4">
      <main>
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
